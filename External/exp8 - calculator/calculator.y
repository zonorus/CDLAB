%{
#include <stdio.h>

int yylex(void);
void yyerror(char *s);
%}

%token NUMBER ID

// Precedence and associativity of operators
%left '+' '-'
%left '*' '/'

%%
E: T {
    printf("Result = %d\n", $1);
    return 0;
}
;

T: T '+' T { $$ = $1 + $3; }
 | T '-' T { $$ = $1 - $3; }
 | T '*' T { $$ = $1 * $3; }
 | T '/' T { $$ = $1 / $3; }
 | '-' T %prec '-' { $$ = -$2; }
 | '(' T ')' { $$ = $2; }
 | NUMBER { $$ = $1; }
 | ID { $$ = 1; }  // Default value for variable names
;
%%

int main() {
    printf("Enter the expression\n");
    yyparse();
    return 0;
}

void yyerror(char *s) {
    printf("\nExpression is invalid: %s\n", s);
}

